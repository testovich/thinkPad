@require '../var';


.popup
  &__form
    width 400px;
    min-height 450px;
    position absolute;
    z-index 2;
    bottom 2px;
    right 50px;

    font-size 16px;

    border 1px solid #666;

    background $color_grey_bglight;

    -moz-transition right .2s ease;
    -webkit-transition right .2s ease;
    transition right .2s ease;

  &__header
    height 50px;
    line-height 50px;
    padding 0 15px;

    background #666;
    color #fff;
    & > h3
      width 80%;
      float left;

  &__close
    float right;
    color #fff;

.form
  padding 0 15px;
  &__label
    display inline-block;
    margin-top 15px;
    font-size 17px;
  &__name
    width 100%;
    height 35px;
    padding 4px 10px;

    background $color_grey_bglight;
    border none;
    border-bottom 1px solid $color_grey_title;
    &:focus
     background #fff;
     outline 0;

  &__description
    width 100%;
    height 350px;
    padding 4px 10px;
    font-size 17px;
    resize none;

    background $color_grey_bglight;
    border none;
    border-bottom 1px solid $color_grey_title;
    &:focus
      background #fff;
      outline 0;

  &__submit
    width 150px;
    height 35px;
    margin 10px 0;

    background $color_blue_ico;
    color #fff;
    border 0;
    &:hover
      opacity .9;
      outline 0;




@media (max-width: 40em)
  .popup
    &__form
      width 100%;
      top 0;
      bottom 0;
      left 0;
      right 0;

