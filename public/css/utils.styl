*
  box-sizing:border-box;
*:before,*:after
  box-sizing:border-box;

a
  text-decoration none;
h1, h2, h3, h4
  margin 0;
  padding 0;

dl, dt, dd
  margin 0;
  padding 0;

.text--shadow
  text-shadow 0 1px 2px rgba(0,0,0,.3);

.unselectable
  -moz-user-select none;
  -webkit-user-select none;
  -ms-user-select none;
  user-select none;

.text-right
  text-align right;

